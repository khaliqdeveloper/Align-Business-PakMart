@{
    ViewData["Title"] = "Edit customer details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    .form-label-required::after {
        content: '*';
        color: red;
        margin-left: 4px;
    }

    .link {
        text-decoration: none;
        color: #3C8DBC !important;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">
        Edit customer details
        <a asp-action="List" asp-controller="Customer" class="ms-2 text-decoration-none link">&larr; back to customer list</a>
    </h5>
    <div>
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
        <button type="submit" class="btn btn-sm btn-primary">Save and Continue Edit</button>
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-trash"></i>Delete
        </button>
    </div>
</div>

<form id="productForm">
    <div>
        <div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="email" class="form-label form-label-required">Email</label>
                    <input type="text" class="form-control" id="email" placeholder="Enter Email" name="Email">
                </div>
                <div class="col-md-4">
                    <label for="password" class="form-label">
                        Password
                    </label>
                    <input type="text" class="form-control" id="password" name="Password">
                </div>
                <div class="col-md-4">
                    <label for="firstName" class="form-label">
                        First name
                    </label>
                    <input type="text" class="form-control" id="firstName" name="FirstName">
                </div>

            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="lastName" class="form-label">
                        Last name
                    </label>
                    <input type="text" class="form-control" id="lastName" name="LastName">
                </div>
                <div class="col-md-4">
                    <label for="companyName" class="form-label">
                        Company name
                    </label>
                    <input type="text" class="form-control" id="companyName" name="CompanyName">
                </div>
                <div class="col-md-4">
                    <label for="customerRole" class="form-label">
                        Customer roles
                    </label>
                    <select class="form-select" id="customerRole" name="CustomerRole">
                        <option value="slect role">Select</option>
                        <option value="seller">Seller</option>
                        <option value="buyer">Buyer</option>
                    </select>
                </div>

            </div>

            <div class="row mb-3">
                <div class="col-md-4 d-flex align-items-center">
                    <label for="active" class="form-label me-2 mb-0">Active:</label>
                    <input class="form-check-input mt-0" type="checkbox" id="active" name="Active">
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label me-2 mb-0">Gender:</label>
                    <div class="form-check form-check-inline mb-0">
                        <input class="form-check-input" type="radio" name="Gender" id="genderMale" value="Male">
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check form-check-inline mb-0 ms-3">
                        <input class="form-check-input" type="radio" name="Gender" id="genderFemale" value="Female">
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="createdOn" class="form-label me-2 mb-0">Created On</label>
                    <input class="form-control" type="date" id="createdOn" name="Createdon">
                </div>
            </div>

            @* Orders Section *@
            <div class="row mb-4">
                <div class="col-12">
                    <h5>Orders</h5>
                    <div class="table-responsive" style="overflow-x: auto; width: 100%;">
                        <table class=" table table-bordered table-striped mt-2" style="width: auto; min-width: 100%; border-collapse: collapse; white-space: nowrap;font-size: 13px;">
                            <thead class="table-light" style="color: black;">
                                <tr>
                                    <th>Order #</th>
                                    <th>Order total</th>
                                    <th>Order status</th>
                                    <th>Payment status</th>
                                    <th>Shipping status</th>
                                    <th>Created on</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1001</td>
                                    <td>$150.00</td>
                                    <td>Processing</td>
                                    <td>Paid</td>
                                    <td>Shipped</td>
                                    <td>2025-05-01</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Order" class="btn btn-sm btn-light shadow-sm d-inline-flex align-items-center justify-content-center px-3 py-1 rounded" style="font-size: 12px;">
                                            <i class="fas fa-eye me-1"></i> View
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>1002</td>
                                    <td>$299.99</td>
                                    <td>Completed</td>
                                    <td>Paid</td>
                                    <td>Delivered</td>
                                    <td>2025-05-03</td>
                                    <td>
                                        <button class="btn btn-sm btn-light shadow-sm d-inline-flex align-items-center justify-content-center px-3 py-1 rounded" style="font-size: 12px;">
                                            <i class="fas fa-eye me-1"></i> View
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>1003</td>
                                    <td>$89.00</td>
                                    <td>Pending</td>
                                    <td>Unpaid</td>
                                    <td>Not Shipped</td>
                                    <td>2025-05-05</td>
                                    <td>
                                        <button class="btn btn-sm btn-light shadow-sm d-inline-flex align-items-center justify-content-center px-3 py-1 rounded" style="font-size: 12px;">
                                            <i class="fas fa-eye me-1"></i> View
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <h5>Addresses</h5>
                    <div class="table-responsive" style="overflow-x: auto; width: 100%;">
                        <table class="table table-bordered table-striped mt-2" style="width: auto; min-width: 100%; border-collapse: collapse; white-space: nowrap; font-size: 13px;">
                            <thead class="table-light" style="color: black;">
                                <tr>
                                    <th>First name</th>
                                    <th>Last name</th>
                                    <th>Email</th>
                                    <th>Phone number</th>
                                    <th>Fax number</th>
                                    <th>Address</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>John</td>
                                    <td>Doe</td>
                                    <td>john@example.com</td>
                                    <td>+123456789</td>
                                    <td>+123456780</td>
                                    <td>123 Main St, City, Country</td>
                                    <td>
                                        <button class="btn btn-sm btn-light shadow-sm d-inline-flex align-items-center justify-content-center px-3 py-1 rounded" style="font-size: 12px;">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-danger px-3 py-1 rounded" style="font-size: 12px;">
                                            <i class="fas fa-trash me-1"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Jane</td>
                                    <td>Smith</td>
                                    <td>jane@example.com</td>
                                    <td>+987654321</td>
                                    <td>+987654320</td>
                                    <td>456 Park Ave, Another City</td>
                                    <td>
                                        <button class="btn btn-sm btn-light shadow-sm d-inline-flex align-items-center justify-content-center px-3 py-1 rounded" style="font-size: 12px;">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-danger px-3 py-1 rounded" style="font-size: 12px;">
                                            <i class="fas fa-trash me-1"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Add New Address Button -->
                    <div>
                        <a asp-action="AddressCreate" asp-controller="Customer" class="btn btn-sm btn-primary d-inline-flex align-items-center px-2 py-1">
                            <i class="fas fa-plus me-2"></i> Add new address
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>


