@{
    ViewData["Title"] = "Edit return request details ";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    .form-label-required::after {
        content: '*';
        color: red;
        margin-left: 4px;
    }

    .link {
        text-decoration: none;
        color: #3C8DBC !important;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h6 class="mb-0">
        Edit return request details

        <a asp-action="List" asp-controller="ReturnRequest" class="ms-2 text-decoration-none link">&larr; back to return request list</a>
    </h6>
    <div>
        <button type="submit" class="btn btn-sm btn-secondary">Notify Customer About Status Change</button>
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
        <button type="submit" class="btn btn-sm btn-primary">Save and Continue Edit</button>
        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
    </div>
</div>

<form id="returnRequestForm">
    <div>
        <div>

            <div class="row mb-3">
                <div class="col-md-6 mb-3" style="display: flex;">
                    <label for="id" class="form-label">ID:</label>
                    <p style="margin-left: 8px !important;" id="id">1</p>
                </div>
                <div class="col-md-6 mb-3" style="display: flex;">
                    <label for="orderNumber" class="form-label">Order #:</label>
                    <a href="#" class="link" style="margin-left: 8px !important;">1</a>
                </div>
                <div class="col-md-6 mb-3" style="display: flex;">
                    <label for="customer" class="form-label">Customer:</label>
                    <a href="#" class="link" style="margin-left: 8px !important;">John Doe</a>
                </div>
                <div class="col-md-6" style="display: flex;">
                    <label for="product" class="form-label">Product:</label>
                    <a href="#" class="link" style="margin-left: 8px !important;">Product 1</a>
                </div>
            </div>

            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity:</label>
                <input type="text" class="form-control" id="quantity" />
            </div>
            <div class="mb-3">
                <label for="quantityReToStock" class="form-label">Quantity returned to stock:</label>
                <input type="text" class="form-control" id="quantityReToStock" />
            </div>
            <div class="mb-3">
                <label for="returnStatus" class="form-label">Return request status:</label>

                <select class="form-select" id="returnStatus" name="returnStatus">
                    <option value="all">All</option>
                    <option value="paid">Pending</option>
                    <option value="pending">Received</option>
                    <option value="pending">Return authorized</option>
                    <option value="pending">Item(s) repaired</option>
                    <option value="pending">Item(s) refunded</option>
                    <option value="pending">Request rejected</option>
                    <option value="pending">Cancelled</option>
                </select>

            </div>
            <div class="mb-3">
                <label for="reasonForReturn" class="form-label form-label-required">Reason for return</label>
                <input type="text" class="form-control" id="reasonForReturn" value="">
            </div>
            <div class="mb-3">
                <label for="requestedAction" class="form-label form-label-required">Requested action</label>
                <input type="text" class="form-control" id="requestedAction" value="">
            </div>
            <div class="mb-3">
                <label for="reviewText" class="form-label">
                    Customer comments
                </label>
                <textarea class="form-control" id="reviewText" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="replyText" class="form-label">
                    Reply text
                </label>
                <textarea class="form-control" id="replyText" rows="3"></textarea>
            </div>


            <div class="row mb-3">
                <div class="col-md-4" style="display: flex;">
                    <label for="displayOrder" class="form-label">
                        Date:
                    </label>
                    <p style="margin-left: 8px !important;">01-05-2025</p>
                </div>
            </div>

        </div>
    </div>
</form>

<!-- JsBarcode -->
<script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>

