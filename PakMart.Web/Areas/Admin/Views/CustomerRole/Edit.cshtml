@{
    ViewData["Title"] = "Edit customer role details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    .form-label-required::after {
        content: '*';
        color: red;
        margin-left: 4px;
    }

    .link {
        text-decoration: none;
        color: #3C8DBC !important;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">
        Edit customer role details - Administrators
        <a asp-action="List" asp-controller="CustomerRole" class="ms-2 text-decoration-none link">&larr; back to customer role list</a>
    </h5>
    <div>
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
        <button type="submit" class="btn btn-sm btn-primary">Save and Continue Edit</button>
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-trash"></i>Delete
        </button>
    </div>
</div>

<form id="productForm">
    <div>
        <div>

            <div class="row mb-3">
                <div class="col-md-6 d-flex align-items-center">
                    <label for="name" class="form-label me-2 mb-0" style="min-width: 60px;">Name:</label>
                    <input type="text" class="form-control me-4" id="name" placeholder="Enter Name" name="Name" value="Administrator" style="max-width: 200px;">

                    <label for="active" class="form-label me-2 mb-0">Active:</label>
                    <input class="form-check-input mt-0" type="checkbox" id="active" name="Active" checked>
                </div>
            </div>


        </div>
    </div>
</form>


