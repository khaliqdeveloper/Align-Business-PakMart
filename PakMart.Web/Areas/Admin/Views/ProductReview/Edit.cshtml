@{
    ViewData["Title"] = "Edit product review details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    .form-label-required::after {
        content: '*';
        color: red;
        margin-left: 4px;
    }
    .link{
        text-decoration: none;
        color: #3C8DBC !important;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">
        Edit product review details  

        <a asp-action="List" asp-controller="ProductReview" class="ms-2 text-decoration-none link">&larr; back to product review list</a>
    </h5>
    <div>
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
        <button type="submit" class="btn btn-sm btn-primary">Save and Continue Edit</button>
        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
    </div>
</div>

<form id="productForm">
    <div>
        <div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="manufacturerName" class="form-label">Product:</label>
                    <a href="#" class="link" style="margin-left: 8px !important;">Product A</a>
                </div>
                <div class="col-md-6">
                    <label for="displayOrder" class="form-label">Customer:</label>
                    <a href="#" class="link" style="margin-left: 8px !important;">Customer X</a>
                </div>
            </div>

            <div class="mb-3">
                <label for="title" class="form-label form-label-required">Title</label>
                <input type="text" class="form-control" id="title" value="Review Title 1">
            </div>
            <div class="mb-3">
                <label for="reviewText" class="form-label form-label-required">
                    Review text
                </label>
                <textarea class="form-control" id="reviewText" rows="3">Review text for Product A from Customer X.</textarea>
            </div>
            <div class="mb-3">
                <label for="replyText" class="form-label form-label-required">
                    Reply text
                </label>
                <textarea class="form-control" id="replyText" rows="3">Reply text from Admin.</textarea>
            </div>


            <div class="row mb-3">
                <div class="col-md-4" style="display: flex;">
                    <label for="rating" class="form-label">Rating:</label>
                    <p style="margin-left: 8px !important;">5</p>
                </div>
                <div class="col-md-4 d-flex align-items-center gap-2">
                    <label class="form-label" for="publish">
                        Is approved
                    </label>
                    <input class="form-check-input mt-0" type="checkbox" id="publish" name="publish" checked>
                </div>
                <div class="col-md-4" style="display: flex;">
                    <label for="displayOrder" class="form-label">
                        Created on:
                    </label>
                    <p style="margin-left: 8px !important;">01-05-2025</p>
                </div>
            </div>

        </div>
    </div>
</form>

<!-- JsBarcode -->
<script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>

